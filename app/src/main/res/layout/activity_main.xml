<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/LightYellow"
    android:id="@+id/main">

    <TextView
        android:id="@+id/tvTitleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILIH LAWANMU"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivVsPlayer"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleMain"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_landing_page1" />

    <TextView
        android:id="@+id/tvVsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="... VS Player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivVsPlayer"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/ivVsCpu"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVsPlayer"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_landing_page2" />

    <TextView
        android:id="@+id/tvVsCpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="... VS CPU"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivVsCpu"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>